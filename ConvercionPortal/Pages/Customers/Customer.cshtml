@page "{id}"
@model ConvercionPortal.Pages.Customers.CustomerModel
@{
}

<div class="row justify-content-center m-3">
    <div class="col col-lg-8">
        <div class="card cardBoxShadow">
            <div class="card-header cardHeaderStyle text-center">
                <h1>@Model.Customer?.Name</h1>
            </div>

            <div class="card-body cardBoxShadow text-center">
                <div class="row">
                    <div class="col col-lg-9">
                        <h4 class="cardTextLeftFloating">Id: @Model.Customer?.Id</h4><hr />
                        <h4 class="cardTextLeftFloating">Описание: @Model.Customer?.Description</h4><hr />
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <a asp-page="/Customers/CustomerList" class="btn btn-success buttonShadow">Back</a>
                        <a asp-page="/Customers/Edit" asp-route-ID="@Model.Customer.Id" class="btn btn-primary buttonShadow">Edit</a>
                        <a href="#" class="btn btn-danger buttonShadow">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
