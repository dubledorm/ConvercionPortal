@using ConvercionPortal.Models
@model Customer

<!--Создаём форму редактирования-->
<form method="post" class="mt-3" enctype="multipart/form-data">
    <!--Создаём скрытое поле для параметра ID-->
    <input type="hidden" asp-for="@Model.Id" />

    <!--Добавляем поля редактирования-->
    <div class="row justify-content-center m-3">
        <div class="col col-lg-8">
            <div class="card cardBoxShadow">
                <div class="card-header cardHeaderStyle text-center">
                    <!--Добавляем поле редактирования имени-->
                    <div class="form-group row">
                        <label asp-for="@Model.Name" class="col col-lg-4 col-form-label text-right">Edit Name:</label>
                        <div class="col col-lg-6">
                            <input asp-for="@Model.Name" class="form-control" placeholder="@Model.Name" />
                            <!--Добавляем сообщение валидации формы-->
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="card-body cardBodyStyle text-center">
                    <div class="row">
                        <div class="col col-lg-9">
                            <h4 class="cardTextLeftFloating">Employee ID: @Model.Id</h4><hr />

                            <!--Добавляем поле редактирования descriptionl-->
                            <div class="form-group row">
                                <label asp-for="@Model.Description" class="col col-lg-4 col-form-label text-right">Edit Description:</label>
                                <div class="col-12 col-lg-6">
                                    <input asp-for="@Model.Description" class="form-control mr-2" placeholder="@Model.Description" />
                                    <!--Добавляем сообщение валидации формы-->
                                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                                </div>
                            </div>
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="card-footer text-center" style="background-color: rgba(0, 0, 0, 0.25);">
                                <button type="submit" class="btn btn-success buttonShadow">Update</button>
                                <a asp-page="/Customers/Customer" asp-route-ID="@Model.Id" class="btn btn-danger buttonShadow">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>