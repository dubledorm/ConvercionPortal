@{
    var bodyClass = ViewData["Class"] ?? "app";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ConvercionPortal</title>
    <link rel="shortcut icon" href="favicon.ico"> 
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/portal.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ConvercionPortal.styles.css" asp-append-version="true" />
</head>

<body  class="@bodyClass">
    <partial name="_LayoutHeaderPartial" />
    <div class="app-wrapper">
	    
	    <div class="app-content pt-3 p-md-3 p-lg-4">
		    <div class="container-xl">
               @RenderBody()
            </div>
        </div>
    </div>

    <partial name="_LayoutFooterPartial" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/plugins/popper.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/app.js"></script> 

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>