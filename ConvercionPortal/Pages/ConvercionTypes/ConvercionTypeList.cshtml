@page
@using ConvercionPortal.Models
@model ConvercionPortal.Pages.ConvercionTypes.ConvercionTypeListModel
@{
    ViewData["search-name-text"] = Request.Query.FirstOrDefault(p => p.Key == "search-name").Value;
    ViewData["search-url-text"] = Request.Query.FirstOrDefault(p => p.Key == "search-url").Value;
    ViewData["search-description-text"] = Request.Query.FirstOrDefault(p => p.Key == "search-description").Value;
}

<partial name="_ConvercionTypeListHeaderPartial.cshtml" />

<div class="tab-content" id="orders-table-tab-content">
    <div class="app-card app-card-orders-table shadow-sm mb-5">
		<div class="app-card-body">
			<div class="table-responsive">
                <table class="table app-table-hover mb-0 text-left">
                    <thead>
						<tr>
							<th class="cell">Id</th>
							<th class="cell">Название</th>
							<th class="cell">Url сервиса</th>
                            <th class="cell">Описание</th>
							<th class="cell"></th>
						</tr>
					</thead>

                    <tbody>
                        @foreach(ConvercionType convercionType in Model.ConvercionTypes)
                        {
                            <tr>
								<td class="cell">@convercionType.Id</td>
                                <td class="cell">@convercionType.Name</td>
                                <td class="cell">@convercionType.ServiceUrl</td>
								<td class="cell"><span class="truncate">@convercionType.Description</span></td>
								<td class="cell"><a class="btn-sm app-btn-secondary" asp-page="/ConvercionTypes/ConvercionType" asp-route-ID="@convercionType.Id">Открыть</a></td>
							</tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
