@page "{id}"
@model ConvercionPortal.Pages.ConvercionTypes.ConvercionTypeModel
@{
}

<h1 class="app-page-title">Конвертер</h1>
<div class="row g-4 settings-section">
	<div class="col-12 col-md-4">
		<h3 class="section-title">@Model.ConvercionType.Name</h3>
		<div class="section-intro">@Model.ConvercionType?.Description</div>
	</div>
	<div class="col-12 col-md-8">
		<div class="app-card app-card-settings shadow-sm p-4">
						    
			<div class="app-card-body">
				<div class="mb-2"><strong>Id:</strong> @Model.ConvercionType.Id</div>
				<div class="mb-2"><strong>URL сервиса конвертации:</strong> @Model.ConvercionType.ServiceUrl</div>
				<hr class="my-4">
				<div class="row justify-content-between">
					<div class="col-auto">
						<a class="btn app-btn-secondary" asp-page="/ConvercionTypes/Edit" asp-route-ID="@Model.ConvercionType.Id">Редактировать</a>
					</div>
					<div class="col-auto">
						<a class="btn app-btn-primary" asp-page="/ConvercionTypes/ConvercionTypeList">К списку</a>
					</div>
					<div class="col-auto">
						<a class="btn app-btn-secondary" href="#">Удалить</a>
					</div>
				</div>
								    
			</div><!--//app-card-body-->
						    
		</div><!--//app-card-->
	</div>
</div><!--//row-->
